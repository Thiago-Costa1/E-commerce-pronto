@model aspnetsite.Models.PainelClienteViewModel
@using aspnetsite.Libraries.Login
@inject aspnetsite.Libraries.Login.LoginCliente LoginCliente

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Boas vindas</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    </head>
    <body>
        <div class="container">
            <div class="alert alert-info text-center shadow-lg p-4 rounded">
                <div class="d-flex justify-content-center align-items-center mb-3">
                    <i class="fas fa-smile-beam fa-3x text-primary me-3"></i>
                    <h4 class="fw-bold text-primary mb-0">Bem-vindo ao Painel de Controle!</h4>
                </div>
            <p class="mb-4">Olá, <strong>@LoginCliente.GetCliente().Nome</strong>! Aqui você pode gerenciar suas informações, revisar pedidos e muito mais. Explore as opções disponíveis no menu e aproveite nossos serviços!</p>
                <div class="d-flex justify-content-center gap-3">              
                <a asp-action="Editar" asp-controller="Home" asp-route-id="@Model.Cliente.Id" class="btn btn-primary">
                <i class="fas fa-user-edit me-2"></i>Editar Perfil
                </a>

                    <a href="/Home/PainelCliente" class="btn btn-success">
                        <i class="fas fa-shopping-cart me-2"></i>Meus Pedidos
                    </a>
                    <a href="/" class="btn btn-secondary">
                        <i class="fas fa-home me-2"></i>Voltar ao Início
                    </a>
                </div>
            </div>
        </div>
    </body>
</html>