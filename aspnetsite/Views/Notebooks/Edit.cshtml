                            <input type="text" name="audioNotebook" class="form-control" id="audio" placeholder="Digite as especificações de áudio">
                        </div>

                        <div class="mb-3">
                            <label for="redeComunicacaoNotebook" id="redeComunicacao" class="form-label">Rede e Comunicação</label>
                            <input type="text" name="redeComunicacaoNotebook" class="form-control" placeholder="Digite as informações de rede e comunicação">
                        </div>

                        <div class="mb-3">
                            <label for="bateriaNotebook" class="form-label">Bateria</label>
                            <input type="text" name="bateriaNotebook" class="form-control" id="bateria" placeholder="Digite as especificações da bateria">
                        </div>

                        <div class="mb-3">
                            <label for="fonteAlimentacaoNotebook" class="form-label">Fonte de Alimentação</label>
                            <input type="text" name="fonteAlimentacaoNotebook" class="form-control" id="fonteAlimentacao" placeholder="Digite as especificações da fonte de alimentação">
                        </div>

                        <div class="mb-3">
                            <label for="pesoNotebook" class="form-label">Peso</label>
                            <input type="text" name="pesoNotebook" class="form-control" id="peso" placeholder="Digite o peso do produto">
                        </div>

                        <div class="mb-3">
                            <label for="incluidoNaCaixaNotebook" class="form-label">Incluído na Caixa</label>
                            <input type="text" name="incluidoNaCaixaNotebook" class="form-control" id="incluidoNaCaixa" placeholder="Digite o que está incluído na caixa">
                        </div>
                    </div>
                </div>

                <!-- Botões -->
                <div class="cadbotao">
                    <button type="submit" class="btn btn-success botaoDuplo">Salvar Produto</button>
                    <button type="button" id="hideFormButton" class="btn btn-danger botaoDuplo">Cancelar</button>
                </div>
            </div>
        </form>
    </div>

    <script>
        document.getElementById("showFormButton").addEventListener("click", function () {
            document.getElementById("productForm").style.display = "block";
        });

        document.getElementById("hideFormButton").addEventListener("click", function () {
            document.getElementById("productForm").style.display = "none";
