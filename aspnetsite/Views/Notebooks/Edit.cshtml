                <div class="container">
                    <div class="primColuna">
                        <div class="mb-3">
                            <label for="nomeNotebook" id="nomeLabel" class="form-label">Nome</label>
                            <input type="text" class="form-control" id="nome" name="nomeNotebook" placeholder="Digite o nome">
                        </div>

                        <div class="mb-3 imagemLabelimg">
                            <label for="imagemNotebook1" class="form-label">Imagem Principal (Card)</label>
                            <input type="file" id="ImagemPrincipal" name="imagemNotebook1" accept="image/*">
                        </div>

                        <div class="mb-3 imagemLabelimg">
                            <label for="imagemNotebook2" class="form-label">Imagem Adicional 1</label>
                            <input type="file" name="imagemNotebook2" accept="image/*">
                        </div>

                        <div class="mb-3 imagemLabelimg">
                            <label for="imagemNotebook3" class="form-label">Imagem Adicional 2</label>
                            <input type="file" name="imagemNotebook3" accept="image/*">
                        </div>

                        <div class="mb-3 imagemLabelimg">
                            <label for="imagemNotebook4" class="form-label">Imagem Adicional 3</label>
                            <input type="file" name="imagemNotebook4" accept="image/*">
                        </div>

                        <div class="mb-3">
                            <label for="descontoNotebook" class="form-label">Desconto</label>
                            <input type="number" name="descontoNotebook" step="0.01" class="form-control" id="desconto" placeholder="Digite o desconto">
                        </div>

                        <div class="mb-3">
                            <label for="precoNotebook" class="form-label">Preço</label>
                            <input type="number" name="precoNotebook" class="form-control" id="Preco" placeholder="Digite o Preco">
                        </div>
                        
                        <div class="mb-3">
                            <label>Oferecer Garantia Estendida?</label>
                            <div>
                                <input type="radio" id="garantiaSim" name="oferecerGarantia" value="sim" onclick="mostrarValorGarantia(true)"> Sim
                                <input type="radio" id="garantiaNao" name="oferecerGarantia" value="nao" onclick="mostrarValorGarantia(false)"> Não
                            </div>
                        </div>

                        <div class="mb-3" id="campoValorGarantia" style="display:none;">
                            <label for="valorGarantiaNotebook">Valor da Garantia Estendida</label>
                            <input type="number" name="valorGarantiaNotebook" id="valorGarantia" step="0.01" class="form-control" placeholder="Digite o valor da garantia">
                        </div>

                        <script>
                            function mostrarValorGarantia(mostrar) {
                                document.getElementById('campoValorGarantia').style.display = mostrar ? 'block' : 'none';
                            }
                        </script>


                        <div class="mb-3">
                            <label for="corNotebook" id="cor" class="form-label">Cor</label>
                            <input type="text" class="form-control" id="cor" name="corNotebook" placeholder="Digite a cor">
                        </div>

                        <div class="mb-3">
                            <label for="sistemaOperacionalNotebook" id="sistemaOp" class="form-label">Sistema Operacional</label>
                            <input type="text" name="sistemaOperacionalNotebook" class="form-control" id="sistemaOperacional" placeholder="Digite o sistema operacional">
                        </div>

                        <div class="mb-3">
                            <label for="processadorNotebook" class="form-label">Processador</label>
                            <input type="text" name="processadorNotebook" class="form-control" id="processador" placeholder="Digite o processador">
                        </div>

                        <div class="mb-3">
                            <label for="placaVideoNotebook" class="form-label">Placa de Vídeo</label>
                            <input type="text" name="placaVideoNotebook" class="form-control" id="placaVideo" placeholder="Digite a placa de vídeo">
                        </div>

                    </div>

                    <div class="segColuna">
                        <div class="mb-3">
                            <label for="telaNotebook" id="tela" class="form-label">Tela</label>
                            <input type="text" name="telaNotebook" class="form-control" placeholder="Digite as especificações da tela">
                        </div>

                        <div class="mb-3">
                            <label for="memoriaNotebook" id="memoriaRAM" class="form-label">Memória RAM</label>
                            <input type="text" name="memoriaNotebook" class="form-control" id="memoria" placeholder="Digite a quantidade de memória RAM">
                        </div>

                        <div class="mb-3">
                            <label for="armazenamentoNotebook" id="armazenaLabel" class="form-label">Armazenamento</label>
                            <input type="text" name="armazenamentoNotebook" class="form-control" id="armazenamento" placeholder="Digite o tipo e capacidade de armazenamento">
                        </div>

                        <div class="mb-3">
                            <label for="portasConexaoNotebook" class="form-label">Portas de Conexão</label>
                            <input type="text" name="portasConexaoNotebook" class="form-control" id="portasConexao" placeholder="Digite as portas de conexão disponíveis">
                        </div>
                    
