@using aspnetsite.Models.Constant
@inject aspnetsite.Libraries.Login.LoginColaborador _colaborador

@{
    ViewData["Title"] = "Início";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Boas-vindas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        .content-wrapper {
            background-color: #e3f2fd; /* Azul claro */
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .alert-custom {
            background-color: #1976d2; /* Azul escuro */
            color: white;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <!-- Container com fundo azul claro e borda arredondada -->
        <div class="content-wrapper">
            <!-- Boas-vindas com nome do cliente -->
            <div class="alert alert-custom text-center" role="alert">
                <h3>Bem-vindo(a), <strong>@_colaborador.GetColaborador().Nome</strong>!</h3>
                <p>Fique à vontade para navegar pelas opções abaixo:</p>
            </div>

            <!-- Opções de navegação -->
            <div class="row text-center">
                <div class="col-md-2">
                    <a href="/Colaborador/Notebooks" class="btn btn-primary btn-lg">
                        <i class="fas fa-box"></i><br>Produtos
                    </a>
                </div>
                <div class="col-md-2">
                    <a href="/Colaborador/Colaborador" class="btn btn-success btn-lg">
                        <i class="fas fa-users-cog"></i><br>Colaborador
                    </a>
                </div>
                <div class="col-md-2">
                    <a href="/clientes" class="btn btn-info btn-lg">
                        <i class="fas fa-user"></i><br>Cliente
                    </a>
                </div>
                <div class="col-md-2">
                    <a href="/pedidos" class="btn btn-warning btn-lg">
                        <i class="fas fa-shopping-cart"></i><br>Pedidos
                    </a>
                </div>
                <div class="col-md-2">                    
                    <a class="btn btn-danger btn-lg" asp-controller="Home" asp-action="Relatorio">
                        <span data-feather="bar-chart-2"></span>
                        <i class="fas fa-chart-line"></i><br>Relatórios
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

