@model aspnetsite.Models.Colaborador

<div class="card">
    <div class="card-header">
        <h4>Atualizar Colaborador</h4>
    </div>
    <div class="card-body">
        <form asp-action="Atualizar" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Senha"></label>
                <input asp-for="Senha" type="password" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Salvar</button>
            <button type="button" class="btn btn-secondary btn-voltar">Cancelar</button>
        </form>
    </div>
</div>